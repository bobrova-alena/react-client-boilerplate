{
  "name": "react-client-boilerplate",
  "version": "0.1.0",
  "main": "dist/server.js",
  "description": "react client boilerplate",
  "author": "Bobrova Alena",
  "license": "MIT",
  "dependencies": {
    "@loadable/component": "^5.15.0",
    "body-parser": "^1.19.0",
    "connected-react-router": "^6.9.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "history": "^5.0.0",
    "http-proxy-middleware": "^2.0.1",
    "mobile-detect": "^1.4.5",
    "nodemon-webpack-plugin": "^4.5.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5"
  },
  "scripts": {
    "clean": "rimraf dist",
    "watch": "npm-run-all --parallel --print-label watch:client:dev watch:server:dev",
    "build": "npm-run-all --print-label build:client:prod build:server:prod",
    "dev": "npm-run-all --print-label build:client:dev build:server:dev",
    "watch:prod": "npm-run-all --parallel --print-label watch:client:prod watch:server:prod",
    "run:nodemon": "nodemon dist/server/server.js",
    "lint:styles": "stylelint \"./src/**/*.ts?(x)\" --fix",
    "lint:code": "eslint \"./src/**/*.ts?(x)\" --fix",
    "------------": "",
    "watch:client:dev": "cross-env MODE_ENV=development webpack --progress --color --mode development --watch --config ./webpack/webpack.client.js",
    "watch:server:dev": "cross-env MODE_ENV=development cross-env webpack --progress --color --mode development --watch --config ./webpack/webpack.server.js",
    "watch:client:prod": "webpack --progress --color --mode production --watch --config ./webpack/webpack.client.js",
    "watch:server:prod": "webpack --progress --color --mode production --watch --config ./webpack/webpack.server.js",
    "build:client:dev": "cross-env MODE_ENV=development webpack --progress --color --mode development --config ./webpack/webpack.client.js",
    "build:server:dev": "cross-env MODE_ENV=development cross-env webpack --progress --color --mode development --config ./webpack/webpack.server.js",
    "build:client:prod": "webpack --color --mode production --config ./webpack/webpack.client.js",
    "build:server:prod": "webpack --color --mode production --config ./webpack/webpack.server.js"
  },
  "proxy": "http://localhost:3080",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bobrova-alena/react-client-boilerplate"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/history": "^4.7.8",
    "@types/loadable__component": "^5.13.4",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/react-router": "^5.1.15",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.10",
    "@types/styled-system": "^5.1.13",
    "@types/webpack-node-externals": "^2.5.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "circular-dependency-plugin": "^5.2.2",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.10",
    "html-webpack-plugin": "^5.3.1",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-custom-processor-loader": "^0.6.0",
    "ts-loader": "^9.2.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.2",
    "typescript-plugin-styled-components": "^1.5.0",
    "webpack": "^5.39.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0",
    "webpack-stream": "^5.2.1"
  }
}
